<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/searchItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#282828">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/songBanner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"/>
            <TextView
                android:id="@+id/searchItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a title"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/songBanner"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/searchItemArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a artist"
                android:textColor="#959595"
                android:layout_toEndOf="@id/songBanner"
                android:layout_below="@+id/searchItemTitle"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>