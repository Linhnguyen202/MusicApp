<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="60dp"
    android:id="@+id/playerView"
    android:backgroundTint="@color/black"
    android:background="@color/black"
    android:visibility="gone">
    <include layout="@layout/custom_toolbar_musicscreen" android:id="@+id/playerToolbar"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/playerToolbar"
        app:layout_constraintBottom_toTopOf="@id/layoutTimeHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_launcher_background"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/layoutTimeHandle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/handleLayout"
        android:layout_marginBottom="40dp">
        <TextView
            android:id="@+id/timeOne"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            />
        <SeekBar
            android:id="@+id/mySeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/timeOne"
            android:layout_toStartOf="@+id/timeTwo"/>
        <TextView
            android:id="@+id/timeTwo"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/handleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/repeatBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_repeat_24"/>
        <ImageView
            android:id="@+id/btnPlayPre"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toStartOf="@+id/playButton"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_skip_previous_24"/>
        <ImageView
            android:id="@+id/playButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_pause_circle_24"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/btnPlayNext"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/playButton"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_skip_next_24"/>
        <ImageView
            android:id="@+id/randomBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_shuffle_24"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>