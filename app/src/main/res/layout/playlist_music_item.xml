<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/searchItemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <ImageView
                android:id="@+id/songBanner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/searchItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/songBanner"
                android:text="This is a title"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/searchItemArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchItemTitle"
                android:layout_toEndOf="@id/songBanner"
                android:text="This is a artist"
                android:textColor="#959595"
                android:textSize="12sp"

                />

            <ImageView
                android:id="@+id/deleteMusicBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_delete_24" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>